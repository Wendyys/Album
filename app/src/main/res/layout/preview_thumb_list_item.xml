<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/preview_thumb_bg"
        android:layout_width="@dimen/preview_thumb_bg_width"
        android:layout_height="@dimen/preview_thumb_bg_height"
        android:background="@color/colorPrimary" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_gravity="center"
        android:id="@+id/preview_thumb_item"
        android:layout_width="@dimen/preview_thumb_width"
        android:layout_height="@dimen/preview_thumb_height"
        fresco:placeholderImage="@mipmap/image_loading" />
</FrameLayout>
